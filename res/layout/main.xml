<!-- Main container that hold all the screen -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" >

	<!-- This will hold the camera preview
		 The creation width and height must fill the whole parent
		 (its real size will be adjusted upon camera aspect ratio)
		 It will be always centered. -->
	<FrameLayout
		android:id="@+id/camera_preview"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true" >
	</FrameLayout>

</RelativeLayout>